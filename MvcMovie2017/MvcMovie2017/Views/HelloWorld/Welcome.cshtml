@{
    ViewData["Title"] = "歡迎 Welcome";
}

<h2>Welcome</h2>
<div class='input'>
    <form action="" method="get">
        <p>輸入名字: <input type="text" name="name"></p>
        <p>輸入數值: <input type="number" name="numTimes" min="1" max="50"></p>
        <input type="submit" value="確認送出">
    </form>
</div>
<ul>
    @for (int i = 0; i < (int)ViewData["NumTimes"]; i++)
    {
        <li>@ViewData["Message"] @i times</li>
    }
</ul>